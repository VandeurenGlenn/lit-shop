{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./www",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
