{
  "compilerOptions": {
    "allowJs": true,
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "./www",
    "moduleResolution": "nodenext",
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
