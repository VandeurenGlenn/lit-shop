{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./exports",
    "moduleResolution":"nodenext",
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,    
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}